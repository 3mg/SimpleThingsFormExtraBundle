<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="comways_form_extra.form.type.recaptcha.class">Comways\FormExtraBundle\Form\Type\RecaptchaType</parameter>
    </parameters>

    <services>
        <service id="form.type.recaptcha" class="%comways_form_extra.form.type.recaptcha.class%" scope="request">
            <tag name="form.type" alias="recaptcha"/>
            <argument type="service" id="request"/>
        </service>
    </services>

</container>
